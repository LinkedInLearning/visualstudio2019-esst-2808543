<Window x:Class="DebugWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebugWpf"
        mc:Ignorable="d"
				Title="MainWindow"
				Width="525"
				FontSize='18'>
	<StackPanel Margin='20'
							HorizontalAlignment='Center'
							Width='400'>
		<Button Content='Get Sample Name'
						Height='36'
						Margin='5'
						HorizontalAlignment='Center'
						Name='GetNameButton'
						VerticalAlignment='Top'
						MinWidth='180'
						Click='GetNameButton_Click' />
		<Button Content='Get All Names'
						Height='36'
						Margin='5'
						HorizontalAlignment='Center'
						Name='AllNamesButton'
						VerticalAlignment='Top'
						MinWidth='180'
						Click='AllNamesButton_Click' />
		<TextBlock x:Name='outputTextblock'
							 HorizontalAlignment='Center' />
		<ListBox x:Name='AllNamesListBox' />
	</StackPanel>
</Window>

  